<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.shkil.battery"
	android:title="@string/settings_title">

<PreferenceCategory android:title="@string/general_options">
	<CheckBoxPreference
		android:key="enabled"
		android:title="@string/enabled"
		android:defaultValue="true"
		android:summaryOn="@string/service_is_running"
		android:summaryOff="@string/service_is_stopped"
	/>
	<org.damazio.notifier.SeekBarPreference
		android:key="low_battery_level"
		android:title="@string/low_battery_level"
		android:dependency="enabled"
		android:dialogTitle="@string/low_battery_level"
		android:defaultValue="@integer/default_low_level"
		app:dialogMessage="@string/low_battery_level_hint"
		app:suffix=" %"
	/>
	<CheckBoxPreference
		android:key="notify_full_battery"
		android:title="@string/notify_full_battery"
		android:defaultValue="@bool/default_notify_full_battery"
		android:dependency="enabled"
		android:summaryOn="@string/notify_full_battery_is_on"
		android:summaryOff="@string/notify_full_battery_is_off"
	/>
</PreferenceCategory>

<PreferenceCategory android:title="@string/alert_options">
	<ListPreference
		android:key="alert_interval"
		android:title="@string/alert_interval"
		android:entries="@array/interval_titles"
		android:entryValues="@array/interval_values"
		android:dependency="enabled"
		android:dialogTitle="@string/alert_interval"
		android:defaultValue="@string/default_alert_interval"
	/>
	<ListPreference
		android:key="vibro_mode"
		android:title="@string/vibro_mode"
		android:entries="@array/vibro_mode_titles"
		android:entryValues="@array/vibro_mode_values"
		android:dependency="enabled"
		android:dialogTitle="@string/vibro_mode"
		android:defaultValue="0"
	/>
	<ListPreference
		android:key="sound_mode"
		android:title="@string/sound_mode"
		android:entries="@array/sound_mode_titles"
		android:entryValues="@array/sound_mode_values"
		android:dependency="enabled"
		android:dialogTitle="@string/sound_mode"
		android:defaultValue="0"
	/>
	<RingtonePreference
		android:key="alert_ringtone"
		android:title="@string/alert_ringtone"
		android:showSilent="false"
		android:showDefault="true"
		android:ringtoneType="notification|alarm"
		android:layout="?android:attr/preferenceLayoutChild"
		android:dependency="enabled"
	/>
</PreferenceCategory>

<PreferenceCategory android:title="@string/miscellaneous">
	<Preference
		android:key="about"
		android:title="@string/about"
		android:summary="@string/about_summary"
		android:persistent="false"
	/>
</PreferenceCategory>

</PreferenceScreen>