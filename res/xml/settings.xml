<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
		android:key="is_enabled"
		android:title="Enabled"
		android:defaultValue="true"
	/>

	<ListPreference
		android:key="low_battery_level"
		android:title="@string/low_battery_level"
		android:layout="?android:attr/preferenceLayoutChild"
		android:entries="@array/level_titles"
		android:entryValues="@array/level_values"
		android:dependency="is_enabled"
		android:dialogTitle="@string/low_battery_level"
		android:defaultValue="30"
	/>

</PreferenceScreen>