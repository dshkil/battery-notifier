<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
		android:key="enabled"
		android:title="@string/enabled"
		android:defaultValue="true"
		android:summaryOn="@string/service_is_running"
		android:summaryOff="@string/service_is_stopped"
	/>

	<ListPreference
		android:key="low_battery_level"
		android:title="@string/low_battery_level"
		android:layout="?android:attr/preferenceLayoutChild"
		android:entries="@array/level_titles"
		android:entryValues="@array/level_values"
		android:dependency="enabled"
		android:dialogTitle="@string/low_battery_level"
		android:defaultValue="@string/default_low_level"
	/>

	<CheckBoxPreference
		android:key="alert_vibro_on"
		android:title="@string/vibrate"
		android:defaultValue="@bool/default_alert_vibro_on"
		android:dependency="enabled"
		android:summaryOn="@string/vibration_is_on"
		android:summaryOff="@string/vibration_is_off"
	/>

	<CheckBoxPreference
		android:key="alert_sound_on"
		android:title="@string/sound"
		android:defaultValue="@bool/default_alert_sound_on"
		android:dependency="enabled"
		android:summaryOn="@string/sound_is_on"
		android:summaryOff="@string/sound_is_off"
	/>

	<RingtonePreference
		android:key="alert_ringtone"
		android:title="@string/alert_ringtone"
		android:showSilent="false"
		android:showDefault="true"
		android:ringtoneType="notification|alarm"
		android:summary="@string/alert_ringtone_summary"
		android:dependency="alert_sound_on"
	/>

	<ListPreference
		android:key="alert_interval"
		android:title="@string/alert_interval"
		android:layout="?android:attr/preferenceLayoutChild"
		android:entries="@array/interval_titles"
		android:entryValues="@array/interval_values"
		android:dependency="enabled"
		android:dialogTitle="@string/alert_interval"
		android:defaultValue="@string/default_alert_interval"
	/>

	<PreferenceCategory android:title="@string/miscellaneous">
		<Preference
			android:key="about"
			android:title="@string/about"
			android:summary="@string/about_summary"
			android:persistent="false"
		/>
	</PreferenceCategory>

</PreferenceScreen>