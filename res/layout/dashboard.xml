<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#ee777777"
	android:padding="30.0dip"
	android:layout_width="270.0dip"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView
		android:id="@+id/snoozeButton"
		android:text="Snooze alerts..."
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="48.0dip"
		android:singleLine="true"
		android:focusable="true"
		android:clickable="true"
		android:longClickable="true"
		android:drawableLeft="@drawable/snooze_off"
		android:gravity="center_vertical"
		android:paddingLeft="13.0dip"
		android:ellipsize="marquee"
		android:drawablePadding="5.0dip"
		android:layout_marginBottom="10.0dip"
		android:background="@drawable/btn_background" />
	<ImageButton
		android:id="@+id/snoozeButton"
		android:layout_width="48.0dip"
		android:layout_height="48.0dip"
		android:src="@drawable/snooze_off"
		android:gravity="center"
		android:layout_marginBottom="10.0dip"
		android:layout_gravity="right"
		android:background="@drawable/btn_background" />
	<Button
		android:text="Battery use" android:id="@+id/batteryUseButton"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="48.0dip"
		android:layout_marginBottom="10.0dip"
		android:background="@drawable/btn_background" />
	<Button
		android:text="Battery info" android:id="@+id/batteryInfoButton"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="48.0dip"
		android:background="@drawable/btn_background" />
</LinearLayout>
