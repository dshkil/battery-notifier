<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.shkil.battery"
      android:versionCode="1"
      android:versionName="0.1">

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".SettingsActivity"
                  android:label="@string/app_name" android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<service android:name=".BatteryNotifierService" android:label="Battery Notifier Service"/>

		<receiver
			android:name=".BootCompletedReceiver"
			android:enabled="true"
			android:exported="false" android:label="Boot Completed Receiver">
			<intent-filter>
	        	<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
	</application>

	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest> 