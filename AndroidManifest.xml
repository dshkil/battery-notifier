<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.shkil.battery"
	android:versionCode="3" android:versionName="0.2.1">

	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="7"></uses-sdk>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
        <activity
			android:name=".SettingsActivity"
			android:label="@string/launcher_name"
			android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<service android:name=".BatteryNotifierService" android:label="Battery Notifier Service"/>

		<receiver android:name=".AlarmReciever" />

		<receiver
			android:name=".BootCompletedReceiver"
			android:enabled="true"
			android:exported="false"
			android:label="Boot Completed Receiver">
			<intent-filter>
	        	<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
	</application>

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
</manifest> 